<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Duartion</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.duration %></td>
        <td><%= song.genre %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%if current_user.user_songs.find_by_song_id(song)%>
          <td><%= link_to 'Remove from playlist', remove_song_song_path(song), method: :delete %></td>
            <% else %>
              <td><%= link_to 'Add to playlist', add_song_song_path(song), method: :post %></td>
              <!-- Esta ruta de arriba necesita el id, así que le tienes que dar el
              id de la canción a través del (song) -->
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

